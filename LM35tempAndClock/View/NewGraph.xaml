<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LM35tempAndClock.View.GraphView"
             Title="GraphView"
             xmlns:drawables="clr-namespace:LM35tempAndClock.Classes">

    <ContentPage.Resources>
        <drawables:LineDrawable x:Key="lineDrawable"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <GraphicsView Drawable ="{StaticResource lineDrawable}"
                      x:Name="LineGraphView"
                      HeightRequest="1000"
                      WidthRequest="1100">
        </GraphicsView>
    </VerticalStackLayout>
</ContentPage>